<%= form_tag "", :"data-role" => "drop-form", :"class" => "new-drop-form pure-form-stacked" do %>
  <button data-button="close-form" class="close button-large pure-button">X</button>
  <div>
    <h2>Add a drop</h2>
    <%= text_field_tag :"drop[text]", "", :"placeholder" => "Comment" %>
  </div>
  <div>
    <%= label_tag "drop[photo]", "Add a photo", class: "photo-label pure-button" %>
    <%= file_field_tag :"drop[photo]", accept: "image/*", class: "photo-button" %>
  </div>
  <%= submit_tag "Drop it!", class: "pure-button" %>
  <div class="loader">
<% end %>
