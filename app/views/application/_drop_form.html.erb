<%= form_tag "", :"data-role" => "drop-form", :"class" => "pure-form-stacked" do %>
  <button data-button="close-form" class="close button-large pure-button">X</button>
  <div>
    <h2>Add a drop</h2>
    <%= text_field_tag :"drop[text]", "", :"placeholder" => "Comment" %>
  </div>
  <div>
    <%= file_field_tag :"drop[photo]" %>
  </div>
  <%= submit_tag %>
<% end %>
