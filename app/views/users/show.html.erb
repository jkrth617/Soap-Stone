<div data-view="user" class="user">
  <div class="head">
    <div class="username"><%= @user.username %></div>
  </div>
  <div class="pure-g profile">
    <div class="pure-u-1-4 avatar">
      <img id="avatar" src="<%= @user.avatar %>">
    </div>
    <div class="pure=u-3-4 follow-form">
      <% unless current_user == @user %>
        <%= render 'follow_form' %>
      <% end %>
    </div>
  </div>
  <div class="pure-g">
    <div class="pure-u-1-3" id="followers">
      <%= pluralize(@user.followers.count, 'follower') %>
    </div>
    <div class="pure-u-1-3" id="followees">
      <%= @user.followees.count %> following
    </div>       
    <div class="pure-u-1-3" id="drops">
      <%= link_to pluralize(@user.drops.count, 'drop'), user_drops_path(@user) %>
    </div>
  </div>

  <div><%= link_to 's', root_path %></div>

  <div class="content" id="drops">
    <% if current_user == @user %>
      <% @user.drops.each do |drop| %>
        <%=  link_to image_tag(drop.photo(:thumb)), drop_path(drop), { :class => "pure-img" }%>
      <% end %>
    <% end %>
  </div>
</div>
<%= render partial: "handlebars_show_follower" %>


    