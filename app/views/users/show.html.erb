<div data-view="user" class="user">
  <div class="head">
    <div class="home">
      <a href="/" ><i class="material-icons">satellite</i></a>
    </div>
    <div class="username">
      <%= @user.username %>
    </div>
  </div>
  <div class="pure-g profile">
    <div class="pure-u-1-4 avatar">
      <img id="avatar" src="<%= @user.avatar %>">
    </div>
    <div class="pure=u-3-4 follow-form">
      <% unless current_user == @user %>
        <%= render 'follow_form' %>
      <% end %>
    </div>
  </div>
  <div class="pure-g">
    <div class="pure-u-1-3" id="followers">
      <%= pluralize(@user.followers.count, 'follower') %>
    </div>
    <div class="pure-u-1-3" id="followees">
      <%= @user.followees.count %> following
    </div>       
    <div class="pure-u-1-3" id="drops">
      <%= link_to pluralize(@user.drops.count, 'drop'), user_drops_path(@user) %>
    </div>
  </div>

  
  <div class="pure-g content" id="drops">
    <% if current_user == @user %>
      <% @user.drops.each do |drop| %>
        <% if drop.photo_file_name.nil? %>
          <div class="pure-u-1-4 pure-u-lg-1-8 open-drop"><%= link_to drop.text, drop_path(drop) %></div>
        <% else %>
          <div class="pure-u-1-4 pure-u-lg-1-8 open-drop"><%=  link_to image_tag(drop.photo(:thumb), { :class => "pure-img" }), drop_path(drop) %> 
        </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
<%= render partial: "handlebars_show_follower" %>
<%= render partial: "handlebars_show_drop" %>

    
